<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.pipitliandani.android.facebox.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logoptlen"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="22dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="NIK"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="@color/colorPrimaryDark"/>


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Unit/ Division"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Work Unit"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/workUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Function Title"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/functionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Email"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Birthday"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Place of Birth"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/placeBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Educational Level"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/eduLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Major"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Phone"
                    android:textColor="@color/colorPrimaryDark"/>


                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/greyLine"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Data"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:id="@+id/remove"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Data"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_margin="5dp"
                android:id="@+id/editData"/>
        </LinearLayout>

    </ScrollView>


    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Edit Data"-->
